---
interface Props {
  text: string;
  class?: string;
}

const { text, class: customClass } = Astro.props;
---

<div
  class:list={[
    "inline-block w-auto rounded-full px-3 py-1 text-sm font-medium shadow-lg backdrop-blur-sm",
    "bg-sky-600 text-white",
    "dark:bg-sky-900 dark:text-white",
    customClass,
  ]}
>
  {text}
</div>
