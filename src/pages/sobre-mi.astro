---
import Layout from "../layouts/layout.astro";
import Animate from "../components/Animate.astro";
import Grid from "../components/Grid.astro";
import Chip from "../components/Chip.astro";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import Carousel from "../components/Carousel.jsx";
import CarouselItem from "../components/CarouselItem.astro";

const skillGroups = [
  {
    category: "Frontend",
    skills: [
      { name: "HTML", icon: "mdi:language-html5" },
      { name: "CSS", icon: "mdi:language-css3" },
      { name: "JavaScript", icon: "mdi:language-javascript" },
      { name: "React", icon: "mdi:react" },
      { name: "Astro", icon: "mdi:rocket-launch-outline" },
      { name: "Tailwind CSS", icon: "mdi:tailwind" },
      { name: "Bootstrap", icon: "mdi:bootstrap" },
      { name: "Material UI", icon: "mdi:material-ui" },
    ],
  },
  {
    category: "Backend & Bases de Datos",
    skills: [
      { name: "Laravel", icon: "mdi:laravel" },
      { name: "SQL", icon: "mdi:database" },
    ],
  },
  {
    category: "Herramientas & DevOps",
    skills: [
      { name: "Git", icon: "mdi:git" },
      { name: "Docker", icon: "mdi:docker" },
      { name: "Visual Studio Code", icon: "mdi:visual-studio-code" },
      { name: "Linux", icon: "mdi:linux" },
    ],
  },
];

const academicJourney = [
  {
    institution: "CECYTEM Plantel Xonacatlán",
    degree: "Tecnico en Programación",
    period: "2016 - 2019",
    description:
      "Formación técnica en programación con énfasis en desarrollo de software y bases de datos. Incluye proyectos prácticos y desarrollo de aplicaciones web. Además participación en competencias de desarrollo de proyectos software orientado a la educación ambiental.",
  },
  {
    institution: "Universidad Tecnológica del Valle de Toluca (UTVT)",
    degree:
      "Técnico Superior Universitario en Desarrollo y Gestión de Software",
    period: "2019 - 2023",
    description:
      "Formación universitaria en desarrollo de software, incluyendo programación avanzada, bases de datos y metodologías ágiles. Participación en proyectos colaborativos y prácticas profesionales en la Universidad Estatal del valle de Toluca.",
  },
  {
    institution: "Universidad Tecnológica del Valle de Toluca (UTVT)",
    degree: "Ingeniería en Desarrollo y Gestión de Software",
    period: "2023 - 2024",
    description:
      "Formación con enfoque en desarrollo avanzado, gestión de proyectos y tecnologías emergentes. Como parte de un proyecto dual, desarrollé una aplicación para generar y validar credenciales digitales que gestiona el acceso de los alumnos a la institución, abarcando el ciclo de vida completo del software.",
  },
];

const myValues = [
  {
    title: "Creatividad",
    description:
      "Busco soluciones únicas y efectivas que van más allá de lo convencional.",
    icon: "mdi:lightbulb-on-outline",
  },
  {
    title: "Rendimiento",
    description:
      "Creo aplicaciones rápidas, eficientes y escalables como estándar.",
    icon: "mdi:speedometer",
  },
  {
    title: "Colaboración",
    description:
      "Disfruto trabajando en equipo para construir proyectos sólidos y cohesivos.",
    icon: "mdi:account-group-outline",
  },
];
---

<Layout
  title="Sobre Mí | Miguel Betzay Dominguez"
  description="Conoce más sobre Miguel Betzay Dominguez, un desarrollador web apasionado por la tecnología y la creatividad."
>
  <section class="items-center">
    <Animate animation="fade-in-up" duration="800ms">
      <Grid cols={1} md={2} gap={12} lgGap={20} class="items-center">
        <div class="flex flex-col gap-6">
          <Chip text="Mi Historia" />
          <h1
            class="text-4xl font-bold tracking-tight text-neutral-800 dark:text-white sm:text-5xl"
          >
            Un desarrollador apasionado por la web.
          </h1>
          <p class="max-w-prose text-lg text-neutral-600 dark:text-neutral-300">
            ¡Hola! Soy Miguel Betzay Dominguez, un desarrollador web full-stack
            con una misión: transformar ideas en soluciones digitales intuitivas
            y elegantes.
          </p>
          <p class="max-w-prose text-lg text-neutral-600 dark:text-neutral-300">
            Me especializo en crear experiencias de usuario memorables, cuidando
            cada detalle desde el concepto hasta el despliegue final.
          </p>
        </div>
        <Animate
          animation="fade-in"
          duration="1000ms"
          delay="400ms"
          class="relative hidden h-full min-h-[480px] md:block"
        >
          <div
            class="absolute inset-0 z-0 -translate-x-4 translate-y-4 rounded-3xl bg-gradient-to-br from-sky-600 to-cyan-800 opacity-20 blur-3xl transition-opacity duration-500 group-hover:opacity-40"
          >
          </div>
          <Image
            src="/images/codeAvatar.png"
            alt="Avatar de Miguel Betzay Dominguez"
            class="relative z-10 h-auto w-full max-w-sm rounded-3xl object-cover shadow-2xl"
            width="400"
            height="400"
            loading="lazy"
          />
        </Animate>
      </Grid>
    </Animate>
  </section>

  <section class="bg-neutral-50 px-6 py-24 dark:bg-neutral-800/30 sm:px-12">
    <Animate animation="fade-in-up" duration="800ms" class="container mx-auto">
      <div class="flex flex-col items-center gap-4 text-center">
        <Chip text="Mi Filosofía" />
        <h2
          class="text-3xl font-bold tracking-tight text-neutral-800 dark:text-white sm:text-4xl"
        >
          Principios que Guían mi Trabajo
        </h2>
      </div>
      <div class="mt-12 grid grid-cols-1 gap-8 md:grid-cols-3">
        {
          myValues.map((value, index) => (
            <Animate
              animation="fade-in-up"
              duration="600ms"
              delay={`${200 + index * 150}ms`}
            >
              <div class="flex h-full flex-col items-center gap-4 rounded-xl border border-neutral-200 bg-white p-8 text-center dark:border-neutral-700 dark:bg-neutral-800">
                <Icon name={value.icon} class="h-10 w-10 text-sky-500" />
                <h3 class="text-xl font-bold text-neutral-800 dark:text-white">
                  {value.title}
                </h3>
                <p class="text-neutral-600 dark:text-neutral-300">
                  {value.description}
                </p>
              </div>
            </Animate>
          ))
        }
      </div>
    </Animate>
  </section>

  <section class="container mx-auto px-6 py-24 sm:px-12">
    <Grid cols={1} lg={3} gap={12} class="items-start">
      <Animate as="div" animation="fade-in-up" duration="800ms">
        <div class="flex flex-col gap-4">
          <Chip text="Habilidades" />
          <h2
            class="text-3xl font-bold tracking-tight text-neutral-800 dark:text-white sm:text-4xl"
          >
            Tecnologías que Domino
          </h2>
          <p class="text-lg text-neutral-600 dark:text-neutral-300">
            Mi conjunto de herramientas para dar vida a proyectos, desde la
            interfaz hasta la base de datos.
          </p>
        </div>
      </Animate>

      <div class="flex flex-col gap-12 lg:col-span-2">
        <Carousel client:load>
          {
            skillGroups.map((group) => (
              <CarouselItem>
                <Animate animation="fade-in-up" duration="800ms" delay="200ms">
                  <h3 class="mb-6 text-xl font-semibold text-neutral-700 dark:text-neutral-300">
                    {group.category}
                  </h3>
                  <div class="grid grid-cols-2 gap-4 sm:grid-cols-3 md:grid-cols-4">
                    {group.skills.map((skill, index) => (
                      <Animate
                        animation="fade-in-up"
                        duration="600ms"
                        delay={`${300 + index * 100}ms`}
                        class="flex flex-col items-center justify-center gap-3 rounded-xl border border-neutral-200 bg-neutral-50 p-6 transition-all duration-300 hover:-translate-y-1.5 hover:shadow-lg dark:border-neutral-800 dark:bg-neutral-800/50"
                      >
                        <Icon
                          name={skill.icon}
                          class="h-10 w-10 text-sky-500"
                        />
                        <span class="text-center font-medium text-neutral-700 dark:text-neutral-200">
                          {skill.name}
                        </span>
                      </Animate>
                    ))}
                  </div>
                </Animate>
              </CarouselItem>
            ))
          }
        </Carousel>
      </div>
    </Grid>
  </section>

  <section class="bg-neutral-50 px-6 py-24 dark:bg-neutral-800/30 sm:px-12">
    <div class="container mx-auto">
      <Grid cols={1} lg={3} gap={12} class="items-start">
        <Animate as="div" animation="fade-in-up" duration="800ms">
          <div class="flex flex-col gap-4">
            <Chip text="Formación" />
            <h2
              class="text-3xl font-bold tracking-tight text-neutral-800 dark:text-white sm:text-4xl"
            >
              Mi Trayectoria Académica
            </h2>
            <p class="text-lg text-neutral-600 dark:text-neutral-300">
              Mi educación ha sido la base fundamental para mi desarrollo como
              profesional en la tecnología.
            </p>
          </div>
        </Animate>

        <div class="relative lg:col-span-2">
          <div
            class="absolute left-2.5 top-3 h-full w-0.5 bg-neutral-200 dark:bg-neutral-700 md:left-3"
          >
          </div>
          <div class="flex flex-col gap-12">
            {
              academicJourney.map((item, index) => (
                <Animate
                  animation="fade-in-up"
                  duration="800ms"
                  delay={`${200 + index * 150}ms`}
                >
                  <div class="relative pl-12">
                    <div class="absolute left-0 top-3 h-5 w-5 rounded-full border-4 border-neutral-50 bg-sky-500 dark:border-neutral-900" />
                    <p class="font-semibold text-sky-500">{item.period}</p>
                    <h3 class="text-xl font-bold text-neutral-800 dark:text-white">
                      {item.degree}
                    </h3>
                    <p class="text-lg text-neutral-700 dark:text-neutral-200">
                      {item.institution}
                    </p>
                    <p class="mt-2 text-neutral-600 dark:text-neutral-300">
                      {item.description}
                    </p>
                  </div>
                </Animate>
              ))
            }
          </div>
        </div>
      </Grid>
    </div>
  </section>
</Layout>
