---
// Importamos el Header y un nuevo componente Footer que crearemos
import Header from "../components/Header.astro";

import "../styles/global.css";

// Definimos las propiedades que el layout aceptará
export interface Props {
  title: string;
  description: string; // <-- Añadimos 'description' para SEO
}

// Obtenemos las props con valores por defecto para seguridad
const {
  title = "Título por defecto",
  description = "Descripción por defecto de mi sitio web.",
} = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:slnt,wght@-10..0,100..900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body
    class="min-h-screen bg-neutral-900 text-neutral-100 font-inter antialiased"
  >
    <a
      href="#main-content"
      class="absolute left-0 top-0 z-[9999] m-3 -translate-y-16 bg-neutral-800 p-3 text-white transition focus:translate-y-0"
    >
      Saltar al contenido principal
    </a>

    <Header />

    <main id="main-content">
      <div class="mx-auto max-w-5xl px-6 py-12 md:py-20">
        <slot />
      </div>
    </main>
  </body>
</html>
